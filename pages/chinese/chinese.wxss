.item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.item1 {
  color: black;
  font-size: 38rpx;
  background-color: cyan;
  width: 200rpx;
  text-align: center;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}

.item2 {
  color: black;
  font-size: 38rpx;
  width: 200rpx;
  text-align: center;
  background-color: AliceBlue;
}
.item5 {
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.line {
  margin-top: 10rpx;
  height: 1px;
}
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: -99999;
  opacity: 0;
  transition: opacity 0.5s ease;
}

.modalBg {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
  left: 0;
  top: 0;
  z-index: 2;
}

.modalDlg {
  width: 98%;
  min-height: 200rpx;
  z-index: 9999;
  background-color: #fff;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.title {
  width: 100%;
  text-align: center;
  font-size: 18px;
  color: black;
}
