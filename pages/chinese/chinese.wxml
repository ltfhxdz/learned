<view class="item5">
  <view class="item1" wx:if="{{previousShow}}">
    <text bindtap="previous">上一课</text>
  </view>
  <view class="item1">
    <text bindtap="select">选择课文</text>
  </view>
  <view class="item1" wx:if="{{nextShow}}">
    <text bindtap="next">下一课</text>
  </view>
</view>


<view class="mask" style="{{termShow?'z-index: 1;opacity:0.7':''}}">
  <view class='modalBg' wx:if="{{termShow}}">
    <view class="modalDlg">
      <view class='title'>
        <text  decode="{{true}}" >&nbsp;&nbsp;</text>
      </view>

      <view wx:for="{{termList}}" wx:key="key">
        <view class="item">
          <text class="item2" catchtap="term1Method" data-index="{{index}}">{{item.term1}}</text>
          <text class="item2" catchtap="term2Method" data-index="{{index}}">{{item.term2}}</text>
        </view>
        <view class="line"></view>
      </view>
      <view>
        <button catchtap="termCancel">取消</button>
      </view>

    </view>
  </view>
</view>

<view class="mask" style="{{lessonShow?'z-index: 1;opacity:0.7':''}}">
  <view class='modalBg' wx:if="{{lessonShow}}">
    <view class="modalDlg">
      <view class='title'>
        <text  decode="{{true}}" >&nbsp;&nbsp;</text>
      </view>

      <view wx:for="{{lessonList}}" wx:key="key">
        <view class="item">
          <text class="item2" catchtap="lesson1Method" data-index="{{index}}">{{item.lesson1}}</text>
          <text class="item2" catchtap="lesson2Method" data-index="{{index}}">{{item.lesson2}}</text>
          <text class="item2" catchtap="lesson3Method" data-index="{{index}}">{{item.lesson3}}</text>
        </view>
        <view class="line"></view>
      </view>
      <view>
        <button catchtap="lessonCancel">取消</button>
      </view>

    </view>
  </view>
</view>

<view class="item6" wx:if="{{classShow}}">
  <text decode="{{true}}">{{term}}</text>
  <text decode="{{true}}" class="item8">{{lesson}}：{{name}}</text>
</view>

<view class='item3' wx:if="{{wordShow}}">
  <view class='title'>
    <text class="item10">词语表</text>
    <text class="item9" bindtap="mark">标记</text>
  </view>

  <view wx:for="{{wordList}}" wx:key="key">
    <view class="item">
      <text class="item2" style='{{item.mark1==index?"background-color:red;":"background-color:AliceBlue"}}' catchtap="word1Method" data-index="{{index}}">{{item.word1}}</text>
      <text class="item2" style='{{item.mark2==index?"background-color:red;":"background-color:AliceBlue"}}' catchtap="word2Method" data-index="{{index}}">{{item.word2}}</text>
      <text class="item2" style='{{item.mark3==index?"background-color:red;":"background-color:AliceBlue"}}' catchtap="word3Method" data-index="{{index}}">{{item.word3}}</text>
      <text class="item2" style='{{item.mark4==index?"background-color:red;":"background-color:AliceBlue"}}' catchtap="word4Method" data-index="{{index}}">{{item.word4}}</text>
    </view>
  </view>
</view>

<view class='item3' wx:if="{{writeShow}}">
  <view class='title'>
    <text class="item10">写字表</text>
    <text class="item9" bindtap="repeat" wx:if="{{wordShow}}">{{isrepeat ? "去重" : "恢复"}}</text>
  </view>

  <view wx:for="{{writeList}}" wx:key="key">
    <view class="item">
      <text class="item2" style='{{item.mark1==index?"background-color:red;":"background-color:AliceBlue"}}' catchtap="write1Method" data-index="{{index}}">{{item.write1}}</text>
      <text class="item2" style='{{item.mark2==index?"background-color:red;":"background-color:AliceBlue"}}' catchtap="write2Method" data-index="{{index}}">{{item.write2}}</text>
      <text class="item2" style='{{item.mark3==index?"background-color:red;":"background-color:AliceBlue"}}' catchtap="write3Method" data-index="{{index}}">{{item.write3}}</text>
      <text class="item2" style='{{item.mark4==index?"background-color:red;":"background-color:AliceBlue"}}' catchtap="write4Method" data-index="{{index}}">{{item.write4}}</text>
      <text class="item2" style='{{item.mark5==index?"background-color:red;":"background-color:AliceBlue"}}' catchtap="write5Method" data-index="{{index}}">{{item.write5}}</text>
    </view>
  </view>
</view>